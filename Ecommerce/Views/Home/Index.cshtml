@model UI.Service.DTO.CustomerDTO
@{
    ViewData["Title"] = "Ecommerce";
}
    <div class="container mt-5">
        <h1>Bienvenido a Ecommerce</h1>
        <p>Selecciona una opción del menú para continuar.</p>
    </div>


    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }

    @if (Model != null)
    {
        <div class="card mt-3" style="width: 400px;">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                <p class="card-text"><strong>Dirección:</strong> @Model.Addres</p>
                <p class="card-text"><strong>Fecha de creación:</strong> @Model.Created.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

